<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="存储"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="读取"
        app:layout_constraintTop_toBottomOf="@id/btn_save" />


    <Button
        android:id="@+id/btn_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清除"
        app:layout_constraintTop_toBottomOf="@id/btn_read" />


    <Button
        android:id="@+id/btn_proto_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proto 对象存储"
        app:layout_constraintTop_toBottomOf="@id/btn_clear" />

    <Button
        android:id="@+id/btn_proto_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proto 对象读取"
        app:layout_constraintTop_toBottomOf="@id/btn_proto_save" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_proto_read" />


</androidx.constraintlayout.widget.ConstraintLayout>